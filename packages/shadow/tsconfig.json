{
	"compilerOptions": {
		"target": "es2018", //optional chain 不能用esnext
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "preserve",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": false,
		"noEmit": true,
		"jsx": "react",
		"sourceMap": false,
		"baseUrl": ".",
		"rootDirs": [
			".",
		],
		"paths": {
			"@/*": [
				"src/renderer/*"
			],
			"@ui/*": [
				"../shadow-ui/src/*"
			],
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*"
	]
}